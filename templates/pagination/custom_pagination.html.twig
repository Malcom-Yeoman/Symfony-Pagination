{% if pageCount > 1 %}
    <nav>
        <ul class="pagination justify-content-center">
            {% if previous is defined %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, { page: previous }) }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            {% endif %}

            {% for page in pagesInRange %}
                <li class="page-item{% if current == page %} active{% endif %}">
                    <a class="page-link" href="{{ path(route, { page: page }) }}">{{ page }}</a>
                </li>
            {% endfor %}

            {% if next is defined %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, { page: next }) }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}